{
  "name": "lagden-tooltip",
  "version": "2.0.0",
  "description": "Tooltip do Osvaldas",
  "keywords": [
    "tooltip",
    "bubble"
  ],
  "bug": {
    "url": "https://github.com/lagden/tooltip/issues",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com",
    "url": "http://lagden.in"
  },
  "main": "dist/tooltip.js",
  "jsnext:main": "src/tooltip.js",
  "repository": "lagden/tooltip",
  "scripts": {
    "report": "nyc report --reporter=html",
    "coverage": "nyc report --reporter=lcov | codecov",
    "pretest": "xo",
    "test": "BABEL_ENV=ava nyc ava",
    "build": "BABEL_ENV=rollup rollup -c rollup.config.tooltip.js",
    "build-jquery": "BABEL_ENV=rollup rollup -c rollup.config.jquery-tooltip.js",
    "pretty": "esformatter -i --indent.value=\"\t\" 'dist/*.js'"
  },
  "dependencies": {
    "lagden-utils": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-register": "^6.7.2",
    "codecov": "^1.0.1",
    "esformatter": "^0.9.2",
    "gulp": "^3.9.1",
    "gulp-postcss": "^6.1.0",
    "gulp-stylus": "^2.3.1",
    "jsdom": "^8.1.0",
    "nyc": "^6.1.1",
    "rollup": "^0.25.4",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-node-resolve": "^1.5.0",
    "xo": "^0.13.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "xo": {
    "ignore": [
      "dist/*.js"
    ],
    "envs": [
      "es6"
    ],
    "esnext": true,
    "global": [
      "window",
      "document"
    ]
  },
  "babel": {
    "env": {
      "rollup": {
        "presets": [
          "es2015-rollup"
        ]
      },
      "ava": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "./test/index.js"
    ],
    "require": [
      "./test/helpers/setup-browser-env",
      "./test/helpers/babel-register"
    ]
  }
}
