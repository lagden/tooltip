doctype html
html(lang="en")
	head
		title Tooltip
		link(href='dist/tooltip.css', media='screen', rel='stylesheet', type='text/css')
		style.
			ul, li {
				margin: 0;
				padding: 0;
				list-style: none;
			}
			.fixed {
				position: fixed;
				width: 100%;
				top: 100px;
				background: yellow;
				display: flex;
				flex-direction: row;
				flex-wrap: nowrap;
			}

			.cnt {
				flex: 1 1 auto;
			}

			.info {
				width: 200px;
				background: red;
				color: white;
				text-align: center;
				padding: 20px;
				float: right;
			}

			.info2 {
				position: absolute;
				top: 3	00px;
				left: 10%;
				width: 200px;
				background: blue;
				color: white;
				text-align: center;
				padding: 20px;
			}

			.lis {
				background: rgba(255, 0, 0, 0.5);
				margin-bottom: 5px;
			}
			.lis:hover {
				background: rgba(0, 0, 0, 0.5);
			}
			.tips {
				background: green;
				padding: 5px;
				display: inline-block;
			}
	body
		h1 Example
		.fixed
			.cnt
				#info.info
		#info2.info2
		- for(var i = 0; i < 50; i++)
			ul
				li.lis
					abbr.tips(data-lagden-tip="Ulala") Tips
		script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.22/require.js')
		script(type='text/javascript').
			require(['dist/tooltip'], function (Tooltip) {
				var info = document.querySelector('#info');
				var info2 = document.querySelector('#info2');
				info.textContent = info2.textContent = navigator.appName;

				var tooltip = new Tooltip(info, {content: 'Regular show!', place: 'bottom', fixed: true});
				var tooltip2 = new Tooltip(info2, {content: 'Regular show!'});

				var tips = document.querySelectorAll('.tips');
				var len = tips.length;
				var arr = new Array(len);
				for (var i = 0; i < len; ++i) {
					arr[i] = new Tooltip(tips[i]);
				}
			});
